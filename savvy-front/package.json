{
  "name": "savvy-frontend",
  "version": "1.0.0",
  "engines": {
    "node": "12.1.0",
    "npm": "6.9.0"
  },
  "description": "Savvy App",
  "main": "index.js",
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "start": "next start -p $PORT",
    "heroku-postbuild": "next build",
    "test": "NODE_ENV=test jest --watch"
  },
  "author": "M.Kochkin",
  "license": "ISC",
  "dependencies": {
    "apollo-boost": "^0.1.16",
