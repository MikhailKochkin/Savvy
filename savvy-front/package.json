    "enzyme-adapter-react-16": "^1.5.0",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.9.2",
    "immutable": "^4.0.0-rc.12",
    "is-url": "^1.2.4",
    "js-cookie": "^2.2.0",
    "lodash.debounce": "^4.0.8",
    "moment": "^2.23.0",
    "next": "^7.0.0",
    "next-cookies": "^1.1.2",
    "next-with-apollo": "^3.1.3",
    "nprogress": "^0.2.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-adopt": "^0.6.0",
    "react-apollo": "^2.2.1",
    "react-dom": "^16.5.2",
    "react-ga": "^2.5.7",
    "react-icons": "^3.2.2",
