{
  "name": "front",
  "version": "1.0.0",
  "description": "BeSavvy new frontend",
  "main": "index.js",
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "start": "next start -p $PORT",
    "heroku-postbuild": "next build",
    "test": "NODE_ENV=test jest --watch"
  },
  "author": "M.Kochkin",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.3.6",
    "@apollo/link-error": "^2.0.0-beta.3",
    "@apollo/react-ssr": "^4.0.0",
    "@material-ui/core": "^4.11.2",
    "apollo-upload-client": "^14.1.3",
    "graphql": "^15.4.0",
    "next": "^9.5.5",
    "next-i18next": "^7.0.1",
    "next-optimized-images": "^2.6.2",
    "next-with-apollo": "^5.1.0",
    "nprogress": "^0.2.0",
    "nuka-carousel": "^4.7.4",
    "prop-types": "^15.7.2",
    "react": "16.14",
    "react-dom": "16.14",
    "react-resize-detector": "^5.2.0",
    "smoothscroll-polyfill": "^0.4.4",
    "styled-components": "^5.2.0",
    "styled-react-modal": "^2.0.1"
  },
  "devDependencies": {
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest"
    }
  },
  "//": "This is our babel config, I prefer this over a .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  },
  "directories": {
    "lib": "lib"
  }
}
